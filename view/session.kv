#: kivy 1.9.1
#: import Transition kivy.uix.screenmanager.NoTransition

<LoginScreen>:
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [150, 0, 150, 0]
        spacing: 30

        Label:
            text: 'Welcome'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Login'
                font_size: 18
                halign: 'left'
                text_size: root.width-300, 20
            TextInput:
                id: login
                multiline: False
                font_size: 14


        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-300, 20

            TextInput:
                id: password
                password: True
                multiline: False
                font_size: 14

        BoxLayout:
            orientation: 'vertical'
            padding: [80, 0, 80, 20]
            Button:
                text: 'LOGIN'
                font_size: 24
                on_release: root.login(login.text, password.text)
