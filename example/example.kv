#: kivy 1.9.1
#: import Transition kivy.uix.screenmanager.NoTransition

<ScreenManagement>:
    id: screen_manager

    transition: Transition()

    screen_one: screen_one
    screen_two: screen_two
    screen_three: screen_three

    ScreenOne:
        id: screen_one
        name: 'screen1'
        manager: screen_manager

    ScreenTwo:
        id: screen_two
        name: 'screen2'
        manager: screen_manager

    ScreenThree:
        id: screen_three
        name: 'screen3'
        manager: screen_manager

<ScreenOne>:
    Button:
        on_release: app.root.current = 'screen2'
        text: 'Goto: Screen Two'

<ScreenTwo>:
    Button:
        on_release: app.root.current = 'screen3'
        text: 'Goto: Screen Three'

<ScreenThree>:
    Button:
        on_release: app.root.current = 'screen1'
        text: 'Goto: Screen One'
